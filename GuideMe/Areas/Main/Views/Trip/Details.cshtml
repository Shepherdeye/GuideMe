@model TripDetailsResponseVM

@{
    ViewData["Title"] = "Trip Details";
}




<div class="container py-5">

    <div class="card shadow-xl mb-5 border-0 rounded-4 overflow-hidden bg-dark">
        <div class="position-relative">

            <img src="/main/img/@Model.Trip.Image" class="w-100 rounded-top-4 opacity-75"
                 style="height: 450px; object-fit: cover;" alt="Trip Image: @Model.Trip.Title" />

            <div class="position-absolute bottom-0 start-0 w-100 p-5 text-white hero-gradient">
                <div class="container px-0">
                    <h1 class="display-3 fw-bolder mb-2 text-white">@Model.Trip.Title</h1>

                    <div class="d-flex flex-wrap gap-4 mt-3 fs-6 fw-bold p-2 rounded hero-details-box bg-white bg-opacity-75">
                        <span class="text-body"><i class="fa-solid fa-location-dot me-1 text-danger"></i> @Model.Trip.Region</span>
                        <span class="text-body"><i class="fa-solid fa-map me-1 text-info"></i> @Model.Trip.Destination</span>
                        <span class="text-body"><i class="fa-solid fa-clock me-1 text-warning"></i> @Model.Trip.NumberOfDays Days</span>
                        <span class="text-body"><i class="fa-solid fa-users me-1 text-success"></i> @Model.Trip.Members Guests</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">

        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
                <h3 class="text-primary fw-bolder display-5 m-0">@Model.Trip.Price.ToString("c")</h3>
                <div class="d-flex gap-2 gap-md-3">
                    @* Adjusted gap for better mobile fit *@
                    @if (Model.CurrentUser?.Role != UserRole.Visitor)
                    {
                        <button class="btn btn-primary btn-sm btn-lg px-3 px-md-4 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#offerModal">
                            <i class="fa-solid fa-handshake me-1 me-md-2"></i> Offer
                        </button>
                    }

                    @if (Model.CurrentUser?.Role != UserRole.Guide)
                    {
                        <button class="btn btn-outline-dark btn-sm btn-lg px-3 px-md-4 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#reviewModal">
                            <i class="fa-solid fa-star me-1 me-md-2"></i> Review
                        </button>
                    }
                </div>
            </div>

            <div class="p-4 border rounded-4 shadow-sm mb-5">
                <h4 class="fw-bold mb-3 text-secondary border-bottom pb-2">Trip Description</h4>
                <p class="lead text-dark mb-4 text-capitalize">
                    @Model.Trip.Description
                </p>
                <div class="border-top pt-3 mt-4 text-end text-secondary" style="font-size:12px">
                    <span class="fw-semibold text-dark">Created by:</span>
                    @Model.Trip.Visitor?.ApplicationUser.FirstName
                    @Model.Trip.Visitor?.ApplicationUser.LastName
                </div>


            </div>

            <h3 class="text-uppercase fw-bold text-secondary mb-4">
                <i class="fa-solid fa-tags text-primary me-2"></i> Current Offers from Guides
            </h3>

            @if (Model.Offers.Any())
            {
                    <div class="card border-0 rounded-4 shadow-sm">
                     <div class="list-group list-group-flush">

                    @foreach (var item in Model.Offers.ToList())
                    {
                    
                        <div class="list-group-item offer-list-item p-3 p-md-4">

                        <!-- Top Row -->
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <img src="/identity/Profile/@item.Guide.ApplicationUser.ProfileImage"
                                class="rounded-circle border border-primary p-1"
                                style="width:55px;height:55px;object-fit:cover" />

                            <div class="flex-grow-1">
                        <div class="fw-bold text-dark">
                            @item.Guide.ApplicationUser.FirstName @item.Guide.ApplicationUser.LastName
                    </div>
                    <small class="text-muted">@item.Guide.ApplicationUser.Role</small>
                    </div>

                    <div class="text-end">
                    <div class="fw-bold text-success fs-5">
                    @item.OfferedPrice.ToString("c")
                    </div>
                   
                   

                    @{
                    string badgeClass =
                    item.Status == OfferStatus.Pending ? "bg-warning text-dark" :
                    item.Status == OfferStatus.Accepted ? "bg-success" :
                    "bg-danger";
                    }
                    <span class="badge @badgeClass rounded-pill px-3 py-1">
                    @item.Status
                    </span>
                    </div>
                    </div>

                    <!-- Message -->
                    <p class="text-muted small mb-2 text-break">
                    @item.Message
                    </p>

                    <!-- Dates -->
                    <small class="text-secondary d-block mb-3">
                    <i class="fa-solid fa-calendar-alt me-1"></i>
                    @item.OfferStartDate.ToShortDateString() →
                    @item.OfferEndDate.ToShortDateString()
                    </small>

                    <!-- Actions -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                    @if (Model.CurrentUser?.Visitor?.Id == Model.Trip.VisitorId && item.Status==OfferStatus.Pending)
                    {
                        <button class="btn btn-primary btn-lg book-offer-btn w-100"
                                data-bs-toggle="modal"
                                data-bs-target="#bookingModal-@item.Id">
                            <i class="bi bi-calendar-check"></i>
                            Book This Offer
                        </button>

                        <div class="modal fade"
                             id="bookingModal-@item.Id"
                             tabindex="-1"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-md">
                                <div class="modal-content rounded-4 shadow">

                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Your Booking</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">

                                        <form   asp-action="CreateBooking"
                                                asp-controller="Trip"
                                                asp-area="Main"
                                              method="post"
                                              class="booking-form">

                                            <input type="hidden" name="OfferId" value="@item.Id" />
                                            <input type="hidden" name="TripId" value="@item.TripId" />
                                            <input type="hidden" name="GuideId" value="@item.GuideId" />
                                            <input type="hidden" name="VisitorId" value="@Model.CurrentUser.Visitor.Id" />

                                            <input type="hidden" name="BookingPrice" value="@item.OfferedPrice" />
                                            <input type="hidden" name="StartDate" value="@item.OfferStartDate.ToString("yyyy-MM-dd")" />
                                            <input type="hidden" name="EndDate" value="@item.OfferEndDate.ToString("yyyy-MM-dd")" />

                                            <div class="mb-3">
                                                <strong>Price:</strong>
                                                <span class="float-end">$@item.OfferedPrice</span>
                                            </div>

                                            <div class="mb-3">
                                                <strong>Start Date:</strong>
                                                <span class="float-end">@item.OfferStartDate.ToShortDateString()</span>
                                            </div>

                                            <div class="mb-3">
                                                <strong>End Date:</strong>
                                                <span class="float-end">@item.OfferEndDate.ToShortDateString()</span>
                                            </div>

                                            <hr />

                                            <button type="button"
                                                    class="btn btn-success w-100 confirm-booking">
                                                Confirm Booking
                                            </button>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>

                    }
                    
                    @if (Model.CurrentUser.Guide?.Id == item.GuideId && item.Status== OfferStatus.Pending)
                    {
                    <a href="/Main/Trip/Details/@item.TripId?activeOfferId=@item.Id"
                    class="btn btn-outline-warning rounded-pill">
                    <i class="fa-solid fa-pen-to-square"></i>
                    </a>

                    <form method="post"
                        asp-action="DeleteOffer"
                        asp-controller="Trip"
                        asp-area="Main"
                        class="delete-offer-form">
                            <input type="hidden" name="offerId" value="@item.Id" />
                            <button type="submit"
                            class="btn btn-outline-danger rounded-pill">
                            <i class="bi bi-trash"></i>
                            </button>
                    </form>
                    }
                    </div>

                    </div>

                        }

                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center rounded-4 shadow-sm py-4" role="alert">
                    <i class="fa-solid fa-bell me-2"></i> Be the first to receive an offer from a guide!
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card p-4 rounded-4 shadow">
                <h3 class="text-uppercase fw-bold text-secondary mb-4 text-center border-bottom pb-3">
                    <i class="fa-solid fa-star text-warning me-2"></i> Reviews
                </h3>

                @if (Model.Reviews.Any())
                {
                    <div class="list-group list-group-flush review-list">
                        @foreach (var item in Model.Reviews.ToList())
                        {
                            <div class="list-group-item p-3 border-0 border-bottom">
                                <div class="d-flex align-items-center mb-2">
                                    <img src="~/identity/Profile/@item.Visitor.ApplicationUser.ProfileImage" class="rounded-circle me-3 flex-shrink-0" style="width: 40px; height: 40px; object-fit: cover;" alt="Visitor: @item.Visitor.ApplicationUser.FirstName" />
                                    <div>
                                        <div class="fw-bold small">@item.Visitor.ApplicationUser.FirstName @item.Visitor.ApplicationUser.LastName</div>
                                        <div>
                                            @{
                                                int rating = 0;
                                                if (item.RatingReview == RatingReview.VeryBad) rating = 1;
                                                else if (item.RatingReview == RatingReview.Bad) rating = 2;
                                                else if (item.RatingReview == RatingReview.Good) rating = 3;
                                                else if (item.RatingReview == RatingReview.VeryGood) rating = 4;
                                                else if (item.RatingReview == RatingReview.Excellent) rating = 5;

                                                for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fa-solid fa-star small @(i <= rating ? "text-warning" : "text-light")"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <p class="text-muted small mb-1">@item.Comment</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small style="font-size:12px;" class="text-secondary">
                                        <i class="fa-solid fa-calendar-alt me-1"></i> @item.ReviewDate.ToLocalTime()
                                    </small>

                                    <div class="d-flex gap-1">
                                        @if (Model.CurrentUser.Visitor?.Id==item.VisitorId)
                                        {
                                       <a href="/Main/Trip/Details/@item.TripId?activeReviewId=@item.Id" 
                                           class="btn btn-outline-warning p-1">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>

                                        
                                <form method="post" asp-action="DeleteReview" asp-controller="Trip" asp-area="Main" class="d-inline delete-review-form">
                                <input type="hidden" name="ReviewId" value="@item.Id" />
                                <input type="hidden" name="TripId" value="@Model.Trip.Id" />
                                <button type="submit" class="btn btn-outline-danger p-1" title="Delete Review">
                                <i class="fa-solid fa-trash-can"></i>
                                </button>
                                </form>

                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-light text-center" role="alert">
                        No reviews yet. Be the first!
                    </div>
                }
            </div>
        </div>
    </div>

@* Offers *@
@* start Creating Offer *@

    <div class="modal fade" id="offerModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header bg-primary text-white border-0 p-4 rounded-top-4">
                    <h5 class="modal-title fw-bold fs-4"><i class="fa-solid fa-handshake me-2"></i> Create Your Offer</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form method="post" asp-action="CreateOffer" asp-controller="Trip" asp-area="Main">
                        <input type="hidden" name="TripId" value="@Model.Trip.Id" />
                        <input type="hidden" name="GuideId" value="@Model.CurrentUser?.Guide?.Id" /> 

                        <p class="text-muted mb-4">Propose a new price and date range for this trip.</p>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Offer Message</label>
                            <textarea name="Message" class="form-control" rows="3" placeholder="Explain why you are offering this price/date..."></textarea>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Offered Price</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                                <input type="number"name="OfferedPrice" class="form-control form-control-lg" placeholder="e.g., 900" />
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Start Date</label>
                                <input name="OfferStartDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">End Date</label>
                                <input name="OfferEndDate" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="modal-footer border-0 p-4 d-flex justify-content-between">
                            <button class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                            <button class="btn btn-success px-5 rounded-pill fw-bold">Submit Offer</button>
                       </div>
                    </form>
                </div>
            
            </div>
        </div>
    </div>

@* End Creating Offer *@


@* start Edit  Offer *@

    <div class="modal fade" id="editOfferModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg">

            <!-- Header -->
            <div class="modal-header bg-primary text-white border-0 p-4 rounded-top-4">
                <h5 class="modal-title fw-bold fs-4">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Edit Your Offer
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body p-4">
                <form method="post" asp-action="EditOffer" asp-controller="Trip" asp-area="Main">



                    <!-- For backend later -->
                    <input type="hidden" name="Id" asp-for="@Model.ActiveOffer.Id" />
                    <input type="hidden" name="TripId" value="@Model.Trip.Id" />

                    <p class="text-muted mb-4">Update your proposed price and date range.</p>

                    <!-- Message -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Offer Message</label>
                        <textarea asp-for="@Model.ActiveOffer.Message" name="Message" class="form-control" rows="3"
                                  placeholder="Update your offer message..."></textarea>
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Offered Price</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-dollar-sign"></i>
                            </span>
                            <input asp-for="@Model.ActiveOffer.OfferedPrice" type="number" name="OfferedPrice"
                                   class="form-control form-control-lg"
                                   placeholder="e.g., 900" />
                        </div>
                    </div>

                    <!-- Dates -->
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Start Date</label>
                            <input asp-for="@Model.ActiveOffer.OfferStartDate" name="OfferStartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">End Date</label>
                            <input asp-for="@Model.ActiveOffer.OfferEndDate" name="OfferEndDate" type="date" class="form-control" />
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="modal-footer border-0 p-4 d-flex justify-content-between">
                        <button class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button class="btn btn-primary px-5 rounded-pill fw-bold">
                            Save Changes
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

@* End Edit Offer *@





@* Reviews *@


@* start creating  Review modal *@

    <div class="modal fade" id="reviewModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header bg-success text-white border-0 p-4 rounded-top-4">
                    <h5 class="modal-title fw-bold fs-4"><i class="fa-solid fa-pen-to-square me-2"></i> Write a Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form method="post" asp-action="CreateReview" asp-controller="Trip" asp-area="Main">
                        <div class="modal-body p-4">
                         
                            <p class="text-muted mb-4">Your honest feedback helps others !</p>

                            <input type="hidden" name="TripId" value="@Model.Trip.Id" />
                            @if (Model.CurrentUser.Visitor != null)
                            {
                                <input type="hidden" name="VisitorId" value="@Model.CurrentUser.Visitor.Id" />
                            }


                            <div class="mb-4">
                               
                                <label class="form-label fw-bold">Rating</label>
                                <select name="RatingReview" class="form-select form-select-lg">
                                    <option value="@RatingReview.Excellent" selected>@RatingReview.Excellent</option>
                                    <option value="@RatingReview.VeryGood">@RatingReview.VeryGood</option>
                                    <option value="@RatingReview.Good">@RatingReview.Good</option>
                                    <option value="@RatingReview.Bad">@RatingReview.Bad</option>
                                    <option value="@RatingReview.VeryBad">@RatingReview.VeryBad</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Comment</label>
                                <textarea maxlength="200" name="Comment" class="form-control" rows="4"
                                          placeholder="Share your experience and details about your trip."></textarea>
                            </div>
                        </div>

                        <div class="modal-footer border-0 p-4 d-flex justify-content-between">
                            <button class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill fw-bold">Submit Review</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

@*  End  creating  Review modal *@


<!--  Edit Review Modal-->

    <div class="modal fade" id="editReviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg">

            <div class="modal-header bg-warning text-dark border-0 p-4 rounded-top-4">
                <h5 class="modal-title fw-bold fs-4">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Edit Your Review
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" asp-action="EditReview" asp-controller="Trip" asp-area="Main">
