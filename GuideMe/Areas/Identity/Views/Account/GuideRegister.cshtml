@model GuideMe.ViewModels.GuideRegisterVm

@{
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
    ViewData["Title"] = "Guide Register";
}

<div class="identity-content">
    <form asp-action="GuideRegister" class="gr-form">
        <h2 class="gr-title mb-3 text-center">Create Guide Account</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- First + Last Name -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="FirstName" class="form-control gr-input" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="LastName" class="form-control gr-input" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
        </div>

        <!-- UserName + PhoneNumber -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="UserName" class="form-control gr-input" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="PhoneNumber" class="form-control gr-input" placeholder="Phone" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>
        </div>

        <!-- Email -->
        <div class="mb-2">
            <input asp-for="Email" class="form-control gr-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <!-- Password + Confirm -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="Password" class="form-control gr-input" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="ConfirmPassword" class="form-control gr-input" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
        </div>

        <!-- Country + Gender -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="Country" class="form-control gr-input" placeholder="Country" />
                <span asp-validation-for="Country" class="text-danger small"></span>
            </div>
            <div class="col">
                <select asp-for="Gender" class="form-select gr-input">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>
        </div>

        <!-- License + YearsOfExperience -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="LicenseNumber" class="form-control gr-input" placeholder="License Number" />
                <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="YearsOfExperience" class="form-control gr-input" placeholder="Years of Experience" />
                <span asp-validation-for="YearsOfExperience" class="text-danger small"></span>
            </div>
        </div>

        <!-- NationalId + ApplicationUserId -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="NationalId" class="form-control gr-input" placeholder="National ID" />
                <span asp-validation-for="NationalId" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="ApplicationUserId" class="form-control gr-input" placeholder="Application User ID" />
                <span asp-validation-for="ApplicationUserId" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-grid mb-2">
            <button type="submit" class="btn btn-primary gr-submit-btn">Create Account</button>
        </div>

        <hr class="my-2">

        <div class="d-grid gap-1 mb-2">
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google", returnUrl = "/" })" class="btn btn-outline-danger btn-sm gr-google-btn">
                <i class="fab fa-google me-1"></i> Google
            </a>
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook", returnUrl = "/" })" class="btn btn-outline-primary btn-sm gr-facebook-btn">
                <i class="fab fa-facebook-f me-1"></i> Facebook
            </a>
        </div>

        <div class="text-center mt-2">
            <a asp-action="VisitorRegister" class="gr-alt-link">Create Visitor Account</a>
            <br />
            <a asp-action="Login" class="gr-alt-link">Login Now</a>

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotifactionPartial" />
}
