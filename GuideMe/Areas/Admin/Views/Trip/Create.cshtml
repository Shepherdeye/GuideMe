@model Trip

<div class="container py-4">
    <h4 class="fw-bold mb-4">Create New Trip</h4>

    <form asp-action="Create" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row g-3">

            <input type="hidden" name="VisitorId" value="@Model.VisitorId" />

            <!-- Title -->
            <div class="col-md-6">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Destination -->
            <div class="col-md-6">
                <label asp-for="Destination" class="form-label fw-semibold"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>

            <!-- Region -->
            <div class="col-md-6">
                <label asp-for="Region" class="form-label fw-semibold"></label>
                <input asp-for="Region" class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="col-md-6">
                <label asp-for="Price" class="form-label fw-semibold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Members -->
            <div class="col-md-6">
                <label asp-for="Members" class="form-label fw-semibold"></label>
                <input asp-for="Members" class="form-control" type="number" min="1" />
                <span asp-validation-for="Members" class="text-danger"></span>
            </div>

            <!-- Days -->
            <div class="col-md-6">
                <label asp-for="NumberOfDays" class="form-label fw-semibold"></label>
                <input asp-for="NumberOfDays" type="number" min="1" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="col-md-6">
                <label asp-for="Status" class="form-label fw-semibold"></label>
                <select asp-for="Status" class="form-select"
                        asp-items="Html.GetEnumSelectList<TripStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="col-md-12">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Upload Image</label>
                <input type="file" required class="form-control" asp-for="Image" accept="image/*" />
            </div>

            <!-- Preview -->
            <div class="col-md-6 text-center">
                <img id="previewImage" src="~/identity/Profile/unkown.png"
                     class="border rounded mt-2"
                     width="150" height="150"
                     alt="Preview" />
            </div>

            <!-- Hidden Dates -->
            <input type="hidden" asp-for="CreatedOn" value="@DateTime.Now" />
            <input type="hidden" asp-for="LastUpdatedon" value="@DateTime.Now" />

            <!-- Submit -->
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back</a>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("Image").addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    document.getElementById("previewImage").src = reader.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
