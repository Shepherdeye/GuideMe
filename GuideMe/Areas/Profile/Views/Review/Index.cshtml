@model PaginatedList<GuideMe.Models.Review>

@{
    ViewData["Title"] = "My Feedback";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-5 align-items-end reveal-1">
        <div class="col-md-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb tiny fw-bold text-uppercase ls-1">
                    <li class="breadcrumb-item"><a href="/Profile/Home" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active text-primary" aria-current="page">Reviews</li>
                </ol>
            </nav>
            <h1 class="display-4 fw-bold text-dark mb-0">Feedback Ledger</h1>
            <p class="text-secondary fs-5 mt-2">Manage your shared experiences and community impact.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="badge-glass px-4 py-2 d-inline-block">
                <i class="bi bi-stars text-warning me-2"></i>@Model.Count Reviews Shared
            </div>
        </div>
    </div>

    <!-- Reviews Table -->
    <div class="glass-card overflow-hidden reveal-2 border-0 shadow-sm mb-5">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light bg-opacity-50">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase tiny fw-bold ls-1 text-muted">Trip / Guide</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Your Rating</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted" style="width: 40%;">Comment Snippet</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Date Posted</th>
                        <th class="pe-4 py-3 text-end text-uppercase tiny fw-bold ls-1 text-muted">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="~/identity/profile/@(review.Visitor?.ApplicationUser?.ProfileImage ?? "default-user.png")" 
                                             class="rounded-circle border border-white border-2 shadow-sm"
                                             style="width: 40px; height: 40px; object-fit: cover;" alt="">
                                        <div>
                                            <p class="mb-0 fw-bold text-dark">@review.Trip?.Title</p>
                                            <span class="text-muted tiny">Guide: @review.Guide?.ApplicationUser?.FirstName</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-warning">
                                        @for (int s = 0; s < 5; s++)
                                        {
                                            <i class="bi @(s < (int)review.RatingReview + 1 ? "bi-star-fill shadow-sm" : "bi-star opacity-20")"></i>
                                        }
                                        <span class="ms-2 tiny fw-bold text-dark">(@((int)review.RatingReview + 1)/5)</span>
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 text-secondary italic small text-truncate" style="max-width: 350px;">
                                        "@review.Comment"
                                    </p>
                                </td>
                                <td>
                                    <span class="text-muted small">@review.ReviewDate.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-icon rounded-circle hover-primary" title="Edit Review">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-icon rounded-circle hover-danger" 
                                                    onclick="return confirm('Permanently remove this feedback?')" title="Delete Review">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-5 text-center">
                                <i class="bi bi-chat-dots text-muted display-4 opacity-25 mb-3 d-block"></i>
                                <h5 class="text-secondary fw-bold">No Reviews Yet</h5>
                                <p class="text-muted small">Your future reviews will be listed here in a professional format.</p>
                                <a href="/Main/Trip/Index" class="btn btn-sm btn-primary rounded-pill px-4 mt-3">Discover Trips</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-md gap-2">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm @(i == Model.PageIndex ? "bg-primary text-white" : "text-dark")" 
                               asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
    .tiny { font-size: 0.7rem; }
    .italic { font-style: italic; }
    .btn-icon { width: 36px; height: 36px; display: inline-flex; align-items: center; justify-content: center; transition: all 0.3s ease; color: #64748b; }
    
    .hover-primary:hover { background: rgba(79, 70, 229, 0.1); color: #4f46e5; transform: translateY(-2px); }
    .hover-danger:hover { background: rgba(239, 68, 68, 0.1); color: #ef4444; transform: translateY(-2px); }

    .pagination .page-link:hover:not(.bg-primary) {
        background: rgba(255, 255, 255, 0.8) !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
    .pagination .page-link { text-decoration: none; }
    .breadcrumb-item + .breadcrumb-item::before { content: "â€¢"; color: #cbd5e1; }
    .text-truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
</style>
