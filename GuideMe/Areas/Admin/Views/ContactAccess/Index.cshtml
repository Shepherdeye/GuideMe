@model AllContactAccessResponse

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">Contact Access Permissions</h4>
    </div>

    @if (Model.ContactAccesses.Any())
    {
        <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table table-striped table-hover table-bordered align-middle mb-0 text-center">
                <thead class="table-dark small">
                    <tr>
                        <th>#</th>
                        <th>Booking ID</th>
                        <th>Visitor</th>
                        <th>Guide</th>
                        <th>Trip</th>
                        <th>Permission Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="small">
                    @foreach (var item in Model.ContactAccesses)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>#@item.BookingId</td>
                            <td>@item.Booking?.Visitor?.ApplicationUser?.FirstName @item.Booking?.Visitor?.ApplicationUser?.LastName</td>
                            <td>@item.Booking?.Guide?.ApplicationUser?.FirstName @item.Booking?.Guide?.ApplicationUser?.LastName</td>
                            <td>
                                <span class="truncate-text" data-text="@item.Booking?.Trip?.Title" data-label="Trip">@item.Booking?.Trip?.Title</span>
                            </td>
                            <td>@item.CreatedAt.ToString("g")</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                    <button type="button" class="btn btn-sm btn-outline-danger px-2 delete-btn" title="Revoke Permission">
                                        <i class="bi bi-shield-x"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Pagination -->
        <nav class="mt-3">
            <ul class="pagination pagination-sm justify-content-center">
                @for (var i = 1; i <= Model.PagesNumber; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/admin/contactaccess/index?page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="text-center py-5">
            <h5 class="text-muted">No Contact Access Records Found</h5>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                const form = btn.closest('form');
                Swal.fire({
                    title: "Revoke Access?",
                    text: "The guide and visitor will no longer see each other's contact info.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    confirmButtonText: "Yes, revoke"
                }).then((result) => {
                    if (result.isConfirmed) form.submit();
                });
            });
        });
    </script>
    <style>
        .truncate-text { display: inline-block; max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; vertical-align: middle; }
    </style>
}
