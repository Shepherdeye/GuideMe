@model GuideMe.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<h2 class="vrp-title text-center mb-4">Login</h2>

<form asp-action="Login" class="d-flex flex-column align-items-center w-100" style="max-width: 450px; margin: auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 w-100"></div>

    <input asp-for="UserNameOrEmail" class="form-control vrp-input mb-3" placeholder="Username or Email" />

    <input asp-for="Password" type="password" class="form-control vrp-input mb-3" placeholder="Password" />

    <div class="form-check mb-3 w-100">
        <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
        <label class="form-check-label" for="rememberMe">
            @Html.DisplayNameFor(model => model.RememberMe)
        </label>
    </div>

    <button type="submit" class="btn vrp-submit-btn w-100 mb-3">Login</button>

    <div class="d-flex justify-content-between w-100 mb-3">
        <a asp-action="VisitorRegister" class="vrp-alt-link">Create Account</a>
        <a asp-action="ForgetPassword" class="vrp-alt-link">Forget Password?</a>
    </div>

    <hr class="w-100 mb-3" />

    <span class="small text-muted mb-2">Or login with</span>
    <div class="d-flex gap-2 w-100 mb-3">
        <button type="button" class="btn vrp-google-btn flex-fill">
            <i class="bi bi-google"></i> Google
        </button>
        <button type="button" class="btn vrp-facebook-btn flex-fill">
            <i class="bi bi-facebook"></i> Facebook
        </button>
    </div>

    <a asp-action="ResendEmailConfirmation" class="vrp-alt-link small mt-2">Resend Email Confirmation</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotifactionPartial" />
}
