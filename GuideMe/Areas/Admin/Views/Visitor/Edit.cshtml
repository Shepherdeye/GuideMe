@model VisitorEditVM

@{
    ViewData["Title"] = "Edit Visitor";
}

@if (Model == null)
{
    <div class="alert alert-danger">Model is null!</div>
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Edit Visitor</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" asp-controller="Visitor" enctype="multipart/form-data" method="post">
                @* Include hidden ID field *@
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label fw-semibold"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label fw-semibold"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="UserName" class="form-label fw-semibold"></label>
                        <input asp-for="UserName" class="form-control" readonly />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" type="email" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label fw-semibold"></label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-select"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label fw-semibold"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Passport" class="form-label fw-semibold"></label>
                        <input asp-for="Passport" class="form-control" />
                        <span asp-validation-for="Passport" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="visitorStatus" class="form-label fw-semibold"></label>
                        <select asp-for="visitorStatus" asp-items="Html.GetEnumSelectList<VisitorStatus>()" class="form-select"></select>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input type="checkbox" asp-for="EmailConfirmed" class="form-check-input" />
                            <label asp-for="EmailConfirmed" class="form-check-label fw-semibold"></label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProfileImage" class="form-label fw-semibold">Profile Image</label>
                        <input asp-for="ProfileImage" type="file" class="form-control" accept="image/*" id="profileImageInput" />
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>

                        <div class="mt-3 text-center">
                            @if (Model.ProfileImage is not null && Model.ProfileImage!= "")
                            {
                                <img id="imagePreview" src="~/identity/Profile/@Model.ProfileImage" alt="Current Profile Image" class="img-fluid rounded-3 shadow-sm" style="max-height:200px; object-fit:cover;" />
                            }
                            else
                            {
                                <img id="imagePreview" src="#" alt="Profile Preview" class="img-fluid rounded-3 shadow-sm" style="display:none; max-height:200px; object-fit:cover;" />
                            }
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning px-4 text-white">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotifactionPartial" />

    <script>
        // Live image preview
        document.getElementById('profileImageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById('imagePreview');

            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
