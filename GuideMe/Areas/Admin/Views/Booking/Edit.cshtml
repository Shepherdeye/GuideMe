@model Booking

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Edit Booking #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TripId" />
                        <input type="hidden" asp-for="GuideId" />
                        <input type="hidden" asp-for="VisitorId" />
                        <input type="hidden" asp-for="StripeSessionId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Trip</label>
                            <input class="form-control" value="@Model.Trip?.Title" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="BookingPrice" class="form-label fw-bold"></label>
                            <input asp-for="BookingPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="BookingPrice" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="EndDate" class="form-label fw-bold"></label>
                                <input asp-for="EndDate" class="form-control" type="date" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BookingStatus" class="form-label fw-bold"></label>
                            <select asp-for="BookingStatus" class="form-select" asp-items="Html.GetEnumSelectList<BookingStatus>()"></select>
                            <span asp-validation-for="BookingStatus" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
