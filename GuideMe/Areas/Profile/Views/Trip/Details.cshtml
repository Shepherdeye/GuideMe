@model Trip

@{
    ViewData["Title"] = "Trip Details";
}

<div class="container py-5">
    <!-- Back Button -->
    <div class="mb-5 reveal-1">
        <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none p-0 transition-all hover-translate-x">
            <i class="bi bi-arrow-left-circle-fill me-2 fs-5 text-primary"></i>
            <span class="fw-bold">Back to my experiences</span>
        </a>
    </div>

    <div class="row g-5">
        <!-- Main Content -->
        <div class="col-lg-8 reveal-2">
            <div class="glass-card overflow-hidden h-auto mb-5">
                <div class="position-relative" style="height: 400px; background: url('@(string.IsNullOrEmpty(Model.Image) ? "/img/placeholder.jpg" : $"/main/img/{Model.Image}")') center/cover no-repeat;">
                    <div class="h-100 w-100 d-flex align-items-end p-4 p-md-5 bg-gradient-dark">
                        <div class="text-white w-100">
                            <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                                <div>
                                    <span class="badge @(Model.Status == TripStatus.Open ? "bg-success" : "bg-warning text-dark") mb-3 px-3 py-1 rounded-pill shadow-sm fw-bold small">
                                        <i class="bi @(Model.Status == TripStatus.Open ? "bi-check-circle-fill" : "bi-lock-fill") me-1"></i> @Model.Status
                                    </span>
                                    <h1 class="display-4 fw-bold mb-0">@Model.Title</h1>
                                </div>
                                <div class="text-md-end">
                                    <span class="d-block text-white-50 tiny fw-bold text-uppercase">Starting From</span>
                                    <span class="display-6 fw-bold">@Model.Price.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="p-4 p-md-5">
                    <div class="d-flex align-items-center gap-2 text-primary fw-bold mb-4 fs-5">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span>@Model.Destination, @Model.Region</span>
                    </div>

                    <h3 class="fw-bold text-dark mb-4 border-start border-4 border-primary ps-3">Trip Overview</h3>
                    <p class="text-secondary fs-5 mb-5" style="white-space: pre-line; line-height: 1.8;">
                        @Model.Description
                    </p>

                    <div class="p-4 rounded-4 bg-light border border-opacity-10 bg-opacity-50">
                        <h5 class="fw-bold text-dark mb-4">What's included</h5>
                        <div class="row g-4">
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle bg-white shadow-sm p-2 text-success">
                                        <i class="bi bi-person-check-fill fs-5"></i>
                                    </div>
                                    <span class="fw-semibold text-secondary">Expert local guide</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle bg-white shadow-sm p-2 text-primary">
                                        <i class="bi bi-camera-fill fs-5"></i>
                                    </div>
                                    <span class="fw-semibold text-secondary">Photography locations</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle bg-white shadow-sm p-2 text-warning">
                                        <i class="bi bi-shield-check fs-5"></i>
                                    </div>
                                    <span class="fw-semibold text-secondary">Full safety equipment</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sticky Sidebar Stats -->
        <div class="col-lg-4 reveal-3">
            <div class="sticky-top" style="top: 2rem;">
                <div class="glass-card p-4 p-md-5 h-auto">
                    <div class="mb-4">
                        <div class="d-flex align-items-center gap-2 mb-4">
                            <div class="bg-primary rounded-pill" style="width: 4px; height: 24px;"></div>
                            <h4 class="fw-bold text-dark mb-0">Journey Stats</h4>
                        </div>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="stat-card p-3 rounded-4 transition-all">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="icon-box bg-primary bg-opacity-10 text-primary">
                                                <i class="bi bi-calendar3"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted tiny fw-bold text-uppercase ls-1 mb-0">Duration</p>
                                                <h5 class="fw-bold text-dark mb-0">@Model.NumberOfDays Days</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="stat-card p-3 rounded-4 transition-all">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="icon-box bg-info bg-opacity-10 text-info">
                                                <i class="bi bi-people-fill"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted tiny fw-bold text-uppercase ls-1 mb-0">Max Capacity</p>
                                                <h5 class="fw-bold text-dark mb-0">@Model.Members People</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="stat-card p-3 rounded-4 transition-all">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="icon-box bg-success bg-opacity-10 text-success">
                                                <i class="bi bi-person-check-fill"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted tiny fw-bold text-uppercase ls-1 mb-0">Initiated By</p>
                                                <h5 class="fw-bold text-dark mb-0">@Model.Visitor?.ApplicationUser?.FirstName</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="stat-card p-3 rounded-4 transition-all">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="icon-box bg-warning bg-opacity-10 text-warning">
                                                <i class="bi bi-clock-history"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted tiny fw-bold text-uppercase ls-1 mb-0">Created On</p>
                                                <h5 class="fw-bold text-dark mb-0">@Model.CreatedOn.ToString("MMM dd, yyyy")</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-3">
                        <a href="/Main/Trip/Details/@Model.Id" class="btn btn-outline-dark btn-lg rounded-pill py-3 fw-bold transition-all">
                            <i class="bi bi-eye-fill me-2"></i>Public View
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-premium py-3 text-center">
                            <i class="bi bi-pencil-square me-2"></i>Edit Experience
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="delete-form">
                            <button type="button" class="btn btn-soft-danger btn-lg rounded-pill py-3 w-100 fw-bold delete-btn">
                                <i class="bi bi-trash3-fill me-2"></i>Delete Trip
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                const form = btn.closest('form');
                Swal.fire({
                    title: "Delete this Experience?",
                    text: "This action is permanent and will cancel all active bookings.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#6366f1",
                    cancelButtonColor: "#64748b",
                    confirmButtonText: "Yes, delete it",
                    customClass: { popup: 'rounded-4 border-0 shadow-lg' }
                }).then((result) => {
                    if (result.isConfirmed) { form.submit(); }
                });
            });
        });
    </script>
    <style>
        body { background: #fdfdfd; }
        .bg-gradient-dark { background: linear-gradient(0deg, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.3) 60%, rgba(0,0,0,0) 100%); }
        .hover-translate-x:hover { transform: translateX(-5px); }
        .tiny { font-size: 0.65rem; letter-spacing: 0.5px; }
        .ls-1 { letter-spacing: 1px; }
        .border-transparent { border-color: transparent; }
        .stat-card { background: rgba(255, 255, 255, 0.6); border: 1px solid rgba(0, 0, 0, 0.05); backdrop-filter: blur(10px); }
        .stat-card:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.05); background: white; border-color: rgba(99, 102, 241, 0.2); }
        .icon-box { width: 42px; height: 42px; display: flex; align-items: center; justify-content: center; rounded: 12px; font-size: 1.25rem; border-radius: 12px; }
    </style>
}
