@model PaginatedList<ContactAccess>

@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Contact Directory";
    string currentUserRole = ViewBag.CurrentUserRole ?? "User";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-5 align-items-end reveal-1">
        <div class="col-md-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb tiny fw-bold text-uppercase ls-1">
                    <li class="breadcrumb-item"><a href="/Profile/Home" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active text-primary" aria-current="page">Contacts</li>
                </ol>
            </nav>
            <h1 class="display-4 fw-bold text-dark mb-0">Contact Directory</h1>
            <p class="text-secondary fs-5 mt-2">Access secure contact information for your confirmed journeys.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="badge-glass px-4 py-2 d-inline-block">
                <i class="bi bi-people-fill text-primary me-2"></i>@Model.Count Professional Connections
            </div>
        </div>
    </div>

    <!-- Contacts Table -->
    <div class="glass-card overflow-hidden reveal-2 border-0 shadow-sm mb-5">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light bg-opacity-50">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase tiny fw-bold ls-1 text-muted">Contact</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Role</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Associated Trip</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Contact Details</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted text-center">Date Linked</th>
                        <th class="pe-4 py-3 text-end text-uppercase tiny fw-bold ls-1 text-muted">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var contact in Model)
                        {
                            bool isGuide = currentUserRole == "Guide" || (currentUserRole == "SuperAdmin" && contact.Booking?.Guide?.ApplicationUserId == currentUserId);
                            
                            var targetUser = isGuide 
                                ? contact.Booking?.Visitor?.ApplicationUser 
                                : contact.Booking?.Guide?.ApplicationUser;
                            
                            var targetRole = isGuide ? "Visitor" : "Guide";

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="position-relative">
                                            <img src="~/identity/profile/@(targetUser?.ProfileImage ?? "default-user.png")" 
                                                 class="rounded-circle border border-white border-2 shadow-sm"
                                                 style="width: 48px; height: 48px; object-fit: cover;" alt="">
                                            <span class="position-absolute bottom-0 end-0 p-1 bg-success border border-white border-2 rounded-circle" title="Secure Contact"></span>
                                        </div>
                                        <div>
                                            <p class="mb-0 fw-bold text-dark">@targetUser?.FirstName @targetUser?.LastName</p>
                                            <span class="text-muted tiny">ID: #@targetUser?.Id.ToString().Substring(0, 8)...</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(targetRole == "Guide" ? "bg-primary" : "bg-info") bg-opacity-10 @(targetRole == "Guide" ? "text-dark" : "text-dark") rounded-pill px-3 py-1 tiny fw-bold">
                                        @targetRole
                                    </span>
                                </td>
                                <td>
                                    <div style="max-width: 200px;">
                                        <p class="mb-0 text-dark fw-semibold text-truncate">@contact.Booking?.Trip?.Title</p>
                                        <p class="mb-0 text-muted tiny">Booking #@contact.BookingId</p>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <i class="bi bi-envelope text-primary opacity-50"></i>
                                            <span class="text-dark">@targetUser?.Email</span>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-telephone text-primary opacity-50"></i>
                                            <span class="text-secondary">@targetUser?.PhoneNumber</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="text-muted small">@contact.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="mailto:@targetUser?.Email" class="btn btn-sm btn-icon rounded-circle hover-primary" title="Email Contact">
                                            <i class="bi bi-envelope-at"></i>
                                        </a>
                                        @if (!string.IsNullOrEmpty(targetUser?.PhoneNumber)) {
                                            <a href="tel:@targetUser.PhoneNumber" class="btn btn-sm btn-icon rounded-circle hover-success" title="Call Contact">
                                                <i class="bi bi-telephone-outbound"></i>
                                            </a>
                                        }
                                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@contact.BookingId" class="btn btn-sm btn-icon rounded-circle hover-dark" title="View Booking">
                                            <i class="bi bi-journal-text"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center">
                                <i class="bi bi-person-badge text-muted display-4 opacity-25 mb-3 d-block"></i>
                                <h5 class="text-secondary fw-bold">Directory Empty</h5>
                                <p class="text-muted small">Contact details are shared once a payment is fully settled.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5 reveal-3">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-md gap-2">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm @(i == Model.PageIndex ? "bg-primary text-white" : "text-dark")" 
                               asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
    .tiny { font-size: 0.7rem; }
    .btn-icon { width: 36px; height: 36px; display: inline-flex; align-items: center; justify-content: center; transition: all 0.3s ease; color: #64748b; }
    
    .hover-primary:hover { background: rgba(79, 70, 229, 0.1); color: #4f46e5; transform: translateY(-2px); }
    .hover-success:hover { background: rgba(34, 197, 94, 0.1); color: #22c55e; transform: translateY(-2px); }
    .hover-dark:hover { background: rgba(15, 23, 42, 0.1); color: #0f172a; transform: translateY(-2px); }

    .pagination .page-link:hover:not(.bg-primary) {
        background: rgba(255, 255, 255, 0.8) !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
    .pagination .page-link { text-decoration: none; }
    .breadcrumb-item + .breadcrumb-item::before { content: "â€¢"; color: #cbd5e1; }
</style>
