@model Offer

@{
    ViewData["Title"] = "Send Offer";
}

<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-primary p-4 text-white">
                    <h3 class="fw-bold mb-0">Create Trip Offer</h3>
                    <p class="mb-0 opacity-75">Propose your services to the trip owner.</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="GuideId" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Selected Trip</label>
                            @if (ViewBag.TripTitle != null)
                            {
                                <input type="hidden" asp-for="TripId" />
                                <div class="p-3 bg-light rounded-3 border">
                                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>@ViewBag.TripTitle
                                </div>
                            }
                            else
                            {
                                <select asp-for="TripId" class="form-select py-3 rounded-3" asp-items="ViewBag.Trips">
                                    <option value="">-- Select a Trip --</option>
                                </select>
                            }
                            <span asp-validation-for="TripId" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="OfferStartDate" class="form-label fw-bold text-dark">Start Date</label>
                                <input asp-for="OfferStartDate" type="date" class="form-control py-3 rounded-3" />
                                <span asp-validation-for="OfferStartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="OfferEndDate" class="form-label fw-bold text-dark">End Date</label>
                                <input asp-for="OfferEndDate" type="date" class="form-control py-3 rounded-3" />
                                <span asp-validation-for="OfferEndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="OfferedPrice" class="form-label fw-bold text-dark">Required Price</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 rounded-start-3">$</span>
                                <input asp-for="OfferedPrice" type="number" step="0.01" class="form-control py-3 border-start-0 rounded-end-3" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="OfferedPrice" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Message" class="form-label fw-bold text-dark">Your Pitch</label>
                            <textarea asp-for="Message" class="form-control rounded-3" rows="4" placeholder="Briefly explain why you are the best guide for this trip..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold">
                                <i class="bi bi-send me-2"></i>Send Offer
                            </button>
                            <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none">
                                Cancel and return
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body { background-color: #f8fafc; }
    .animate-fade-in { animation: fadeIn 0.6s ease-out; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    .form-control:focus, .form-select:focus { 
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
