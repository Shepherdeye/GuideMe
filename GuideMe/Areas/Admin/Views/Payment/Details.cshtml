@model Payment

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Payment Details #@Model.Id</h5>
                    <a asp-action="Index" class="btn btn-sm btn-light">Back to List</a>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6 border-end">
                            <h6 class="text-muted text-uppercase small fw-bold">Transaction Info</h6>
                            <p class="mb-1"><strong>Stripe Intent ID:</strong> <span class="text-break">@Model.StripePaymentIntentId</span></p>
                            <p class="mb-1"><strong>Date:</strong> @Model.PaymentDate.ToString("f")</p>
                            <p class="mb-1"><strong>Total Amount:</strong> <span class="text-success h5">@Model.Amount.ToString("C")</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Earning Breakdown</h6>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Platform Earning:</span>
                                <span class="text-primary fw-bold">@Model.PlatformEarning.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Guide Earning:</span>
                                <span class="text-info fw-bold">@Model.GuideEarning.ToString("C")</span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between small text-muted">
                                <span>Service Fee (Guide):</span>
                                <span>@Model.ServiceFeeGuide.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between small text-muted">
                                <span>Service Fee (Visitor):</span>
                                <span>@Model.ServiceFeeVisitor.ToString("C")</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded shadow-sm h-100">
                                <h6 class="fw-bold mb-3"><i class="bi bi-person"></i> Visitor Details</h6>
                                <p class="mb-1 small"><strong>Name:</strong> @Model.Booking?.Visitor?.ApplicationUser?.FirstName @Model.Booking?.Visitor?.ApplicationUser?.LastName</p>
                                <p class="mb-0 small"><strong>Email:</strong> @Model.Booking?.Visitor?.ApplicationUser?.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded shadow-sm h-100">
                                <h6 class="fw-bold mb-3"><i class="bi bi-person-badge"></i> Guide Details</h6>
                                <p class="mb-1 small"><strong>Name:</strong> @Model.Booking?.Guide?.ApplicationUser?.FirstName @Model.Booking?.Guide?.ApplicationUser?.LastName</p>
                                <p class="mb-0 small"><strong>Email:</strong> @Model.Booking?.Guide?.ApplicationUser?.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 p-3 border rounded">
                        <h6 class="fw-bold mb-2 pe-3 border-bottom pb-2">Associated Trip</h6>
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(Model.Booking?.Trip?.Image))
                            {
                                <img src="/main/img/@Model.Booking.Trip.Image" class="rounded me-3" width="60" height="60" style="object-fit: cover;">
                            }
                            <div>
                                <h6 class="mb-0">@Model.Booking?.Trip?.Title</h6>
                                <p class="text-muted small mb-0">@Model.Booking?.Trip?.Destination, @Model.Booking?.Trip?.Region</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
