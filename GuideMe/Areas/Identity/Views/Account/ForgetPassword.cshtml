@model GuideMe.Models.ForgetPasswordVM

@{
    ViewData["Title"] = "ForgetPassword";
}

<div class="container">

    <h1>Forget Password</h1>


    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ForgetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserNameOrEmail" class="control-label"></label>
                    <input asp-for="UserNameOrEmail" class="form-control" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <input type="submit" value="Go" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Login">Back to Login</a>
        
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_NotifactionPartial" />
}
