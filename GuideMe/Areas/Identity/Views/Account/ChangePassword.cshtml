@model GuideMe.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<h2 class="vrp-title text-center mb-4">Change Password</h2>

<form asp-action="ChangePassword" class="d-flex flex-column align-items-center w-100" style="max-width: 400px; margin: auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 w-100"></div>

    <input type="hidden" name="ApplicationUserId" value="@Model.ApplicationUserId" />

    <input asp-for="Password" type="password" class="form-control vrp-input mb-3" placeholder="New Password" />
    <input asp-for="ConfirmPassword" type="password" class="form-control vrp-input mb-3" placeholder="Confirm Password" />

    <button type="submit" class="btn vrp-submit-btn w-100 mb-3">Change Password</button>

    <div class="d-flex justify-content-center w-100">
        <a asp-action="Login" class="vrp-alt-link">Back to Login</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotifactionPartial" />
}
