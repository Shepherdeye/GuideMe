@model AllPaymentsResponse

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">Payments</h4>
    </div>

    @if (Model.Payments.Any())
    {
        <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table table-striped table-hover table-bordered align-middle mb-0 text-center">
                <thead class="table-dark small">
                    <tr>
                        <th>#</th>
                        <th>Booking ID</th>
                        <th>Visitor</th>
                        <th>Total Amount</th>
                        <th>Platform Earning</th>
                        <th>Guide Earning</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="small">
                    @foreach (var item in Model.Payments)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>#@item.BookingId</td>
                            <td>@item.Booking?.Visitor?.ApplicationUser?.FirstName @item.Booking?.Visitor?.ApplicationUser?.LastName</td>
                            <td class="fw-bold text-success">@item.Amount.ToString("C")</td>
                            <td class="text-primary">@item.PlatformEarning.ToString("C")</td>
                            <td class="text-info">@item.GuideEarning.ToString("C")</td>
                            <td>@item.PaymentDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary px-2" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Pagination -->
        <nav class="mt-3">
            <ul class="pagination pagination-sm justify-content-center">
                @for (var i = 1; i <= Model.PagesNumber; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/admin/payment/index?page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="text-center py-5">
            <h5 class="text-muted">No Payments Found</h5>
        </div>
    }
</div>
