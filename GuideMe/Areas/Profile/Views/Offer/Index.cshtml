@model PaginatedList<Offer>

@{
    ViewData["Title"] = "Trip Offers";
    string userType = ViewBag.UserType ?? "User";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4 mb-5 reveal-1">
        <div>
            <h1 class="display-4 fw-bold text-dark mb-2">
                <i class="bi bi-tags-fill text-primary me-3"></i>@(userType == "Guide" ? "Sent Proposals" : "Guide Proposals")
            </h1>
            <p class="fs-5 text-secondary mb-0">Manage and review your professional guide offers.</p>
        </div>
        <div class="d-flex align-items-center gap-3">
             <span class="badge-glass px-4 py-2 d-none d-md-inline-block">
                <i class="bi bi-send-check me-2"></i>Total: @Model.Count
            </span>
            @if (userType == "Guide")
            {
                <a asp-action="Create" class="btn-premium">
                    <i class="bi bi-send-fill me-2"></i>Create New Offer
                </a>
            }
        </div>
    </div>

    <!-- Offers Table -->
    <div class="glass-card overflow-hidden reveal-2 border-0 shadow-sm mb-5">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light bg-opacity-50">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase tiny fw-bold ls-1 text-muted">Trip Details</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">@(userType == "Guide" ? "Traveler" : "By Guide")</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Price</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Dates</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Status</th>
                        <th class="pe-4 py-3 text-end text-uppercase tiny fw-bold ls-1 text-muted">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        @if (!string.IsNullOrEmpty(item.Trip?.Image))
                                        {
                                            <img src="~/main/img/@item.Trip.Image" class="rounded-3 shadow-sm object-fit-cover" style="width: 48px; height: 48px;" alt="Trip" />
                                        }
                                        else
                                        {
                                            <div class="rounded-3 bg-light d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                                <i class="bi bi-map text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <p class="mb-0 fw-bold text-dark">@item.Trip?.Title</p>
                                            <span class="text-muted tiny">Trip #@item.TripId</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle bg-light p-1 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                            <i class="bi bi-person-fill text-primary small"></i>
                                        </div>
                                        <span class="text-dark fw-semibold">
                                             @(userType == "Guide" 
                                                ? item.Trip?.Visitor?.ApplicationUser?.FirstName 
                                                : item.Guide?.ApplicationUser?.FirstName)
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">@item.OfferedPrice.ToString("C")</span>
                                </td>
                                <td>
                                    <div class="small text-secondary">
                                        <div><i class="bi bi-calendar-event me-1 opacity-50"></i>@item.OfferStartDate.ToString("MMM dd")</div>
                                        <div class="tiny text-muted ms-3">to @item.OfferEndDate.ToString("MMM dd")</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(item.Status switch {
                                        OfferStatus.Accepted => "bg-success",
                                        OfferStatus.Pending => "bg-warning text-dark",
                                        OfferStatus.Rejected => "bg-danger",
                                        OfferStatus.Canceled => "bg-secondary",
                                        _ => "bg-light text-dark"
                                    }) bg-opacity-10 text-dark border border-opacity-10 rounded-pill px-3 py-1 tiny fw-bold">
                                        @item.Status
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        @if (userType == "Guide")
                                        {
                                            @if (item.Status == OfferStatus.Pending)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light rounded-pill px-3 fw-bold transition-all hover-shadow" title="Edit Offer">
                                                    <i class="bi bi-pencil-fill text-muted"></i>
                                                </a>
                                            }
                                            
                                            @if (item.Status == OfferStatus.Pending || item.Status == OfferStatus.Rejected)
                                            {
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-light rounded-pill px-3 fw-bold transition-all hover-shadow text-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this offer?')" title="Delete Offer">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </form>
                                            }
                                        }
                                        
                                        <a href="/Main/Trip/Details/@item.TripId" class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-bold transition-all hover-shadow">
                                            Review <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center">
                                <i class="bi bi-inbox text-muted display-4 opacity-25 mb-3 d-block"></i>
                                <h5 class="text-secondary fw-bold">No offers found</h5>
                                <p class="text-muted small">Your offers will appear here.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5 reveal-3">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-md gap-2">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm @(i == Model.PageIndex ? "bg-primary text-white" : "text-dark")" 
                               asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
    .tiny { font-size: 0.7rem; }
    .hover-shadow:hover { 
        transform: translateY(-2px); 
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
    }
    .pagination .page-link:hover:not(.bg-primary) {
        background: rgba(255, 255, 255, 0.8) !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
    .pagination .page-link { text-decoration: none; }
    .breadcrumb-item + .breadcrumb-item::before { content: "â€¢"; color: #cbd5e1; }
</style>
