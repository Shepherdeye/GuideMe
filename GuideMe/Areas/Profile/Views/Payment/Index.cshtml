@model PaginatedList<Payment>

@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Financial Records";
    var totalRevenue = ViewBag.TotalRevenue ?? 0m;
    var totalFees = ViewBag.TotalFees ?? 0m;
    var netEarnings = ViewBag.NetEarnings ?? 0m;
    var growth = (double)(ViewBag.Growth ?? 0);
    string userRole = ViewBag.UserRole ?? "User";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="container py-5">
    <!-- Header & Breadcrumbs -->
    <div class="row mb-5 reveal-1">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb tiny fw-bold text-uppercase ls-1">
                    <li class="breadcrumb-item"><a href="/Profile/Home" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active text-primary" aria-current="page">Payments</li>
                </ol>
            </nav>
            <h1 class="display-4 fw-bold text-dark mb-0">Financial Analytics</h1>
            <p class="text-secondary fs-5 mt-2">Track your @(userRole == "Guide" ? "earnings" : userRole == "SuperAdmin" ? "finances" : "spending") and growth with precision.</p>
        </div>
    </div>

    <!-- Analytics Dashboard -->
    <div class="row g-4 mb-5 reveal-1">
        <!-- Revenue Card -->
        <div class="col-xl-3 col-md-6">
            <div class="glass-card p-4 h-100 border-start border-primary border-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="bi bi-wallet2 fs-4 text-primary"></i>
                    </div>
                    <span class="badge @(growth >= 0 ? "bg-success" : "bg-danger") bg-opacity-10 @(growth >= 0 ? "text-success" : "text-danger") rounded-pill px-3 py-1 tiny fw-bold">
                        <i class="bi @(growth >= 0 ? "bi-arrow-up-right" : "bi-arrow-down-right") me-1"></i>@Math.Abs(growth).ToString("N1")%
                    </span>
                </div>
                <h6 class="text-secondary tiny fw-bold text-uppercase ls-1 mb-1">Total Gross</h6>
                <h2 class="fw-bold text-dark mb-0">@totalRevenue.ToString("C")</h2>
            </div>
        </div>

        <!-- Net Card -->
        <div class="col-xl-3 col-md-6">
            <div class="glass-card p-4 h-100 border-start border-success border-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="bi bi-bank fs-4 text-success"></i>
                    </div>
                </div>
                <h6 class="text-secondary tiny fw-bold text-uppercase ls-1 mb-1">Net @(userRole == "Guide" ? "Earnings" : userRole == "SuperAdmin" ? "Income" : "Spend")</h6>
                <h2 class="fw-bold text-dark mb-0">@netEarnings.ToString("C")</h2>
            </div>
        </div>

        <!-- Fees Card -->
        <div class="col-xl-3 col-md-6">
            <div class="glass-card p-4 h-100 border-start border-warning border-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i class="bi bi-shield-check fs-4 text-warning"></i>
                    </div>
                </div>
                <h6 class="text-secondary tiny fw-bold text-uppercase ls-1 mb-1">Service Fees</h6>
                <h2 class="fw-bold text-dark mb-0">@totalFees.ToString("C")</h2>
            </div>
        </div>

        <!-- Growth Stats Card -->
        <div class="col-xl-3 col-md-6">
            <div class="glass-card p-4 h-100 bg-dark text-white shadow-lg overflow-hidden position-relative border-0">
                 <div class="position-absolute top-0 end-0 p-3 opacity-10">
                    <i class="bi bi-graph-up-arrow display-1"></i>
                </div>
                <div class="position-relative z-1">
                    <h6 class="text-white text-opacity-50 tiny fw-bold text-uppercase ls-1 mb-3">Monthly Pulse</h6>
                    <div class="d-flex align-items-end gap-2 mb-2">
                        <h2 class="fw-bold mb-0">@(growth >=0 ? "+" : "")@growth.ToString("N1")%</h2>
                        <span class="small text-white text-opacity-50 mb-1">Growth rate</span>
                    </div>
                    <div class="progress bg-white bg-opacity-10" style="height: 6px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: @(Math.Clamp(Math.Abs(growth), 0, 100))%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment History Table -->
    <div class="glass-card overflow-hidden reveal-2 border-0 shadow-sm mb-5">
        <div class="p-4 bg-white border-bottom d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-dark mb-0">Transaction History</h4>
            <div class="d-flex gap-2">
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary border-0 rounded-pill px-3 dropdown-toggle" type="button" data-bs-toggle="dropdown">Last 30 Days</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                        <li><a class="dropdown-item" href="#">Year to Date</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light bg-opacity-50">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase tiny fw-bold ls-1 text-muted">Reference</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Trip / Journey</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Transaction Date</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Gross Amount</th>
                        <th class="py-3 text-uppercase tiny fw-bold ls-1 text-muted">Platform Fee</th>
                        <th class="pe-4 py-3 text-uppercase tiny fw-bold ls-1 text-muted">Net Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var payment in Model)
                        {
                            bool isGuide = userRole == "Guide" || (userRole == "SuperAdmin" && payment.Booking?.Guide?.ApplicationUserId == currentUserId);

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-3 bg-light p-2 text-primary">
                                            <i class="bi bi-receipt"></i>
                                        </div>
                                        <span class="text-dark fw-bold">#@payment.Id</span>
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 fw-bold text-dark">@payment.Booking?.Trip?.Title</p>
                                    <p class="mb-0 text-muted tiny">@(isGuide ? "Visitor" : "Guide"): @(isGuide ? payment.Booking?.Visitor?.ApplicationUser?.FirstName : payment.Booking?.Guide?.ApplicationUser?.FirstName)</p>
                                </td>
                                <td>
                                    <div class="small">
                                        <p class="mb-0 text-dark fw-semibold">@payment.PaymentDate.ToString("MMM dd, yyyy")</p>
                                        <p class="mb-0 text-muted tiny">@payment.PaymentDate.ToString("hh:mm tt")</p>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@payment.Amount.ToString("C")</span>
                                </td>
                                <td>
                                    <span class="text-danger small fw-semibold">- @((isGuide ? payment.PlatformEarning : payment.ServiceFeeVisitor).ToString("C"))</span>
                                </td>
                                <td class="pe-4">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="fw-bold text-success">@((isGuide ? payment.GuideEarning : (payment.Amount - payment.ServiceFeeVisitor)).ToString("C"))</span>
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-2 py-0 tiny">Settled</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center">
                                <i class="bi bi-cash-stack text-muted display-4 opacity-25 mb-3 d-block"></i>
                                <h5 class="text-secondary fw-bold">No transactions found</h5>
                                <p class="text-muted small">Your financial story hasn't started yet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5 reveal-3">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-md gap-2">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm @(i == Model.PageIndex ? "bg-primary text-white" : "text-dark")" 
                               asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link glass-card border-0 rounded-4 px-3 py-2 shadow-sm" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
    .tiny { font-size: 0.7rem; }
    .pagination .page-link:hover:not(.bg-primary) {
        background: rgba(255, 255, 255, 0.8) !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
    .pagination .page-link { text-decoration: none; }
    .breadcrumb-item + .breadcrumb-item::before { content: "â€¢"; color: #cbd5e1; }
</style>
