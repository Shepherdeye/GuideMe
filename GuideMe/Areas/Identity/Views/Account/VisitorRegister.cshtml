@model GuideMe.ViewModels.VisitorRegisterVm

@{
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
    ViewData["Title"] = "Visitor Register";
}

<div class="identity-content">
    <form asp-action="VisitorRegister" class="vrp-form">
        <h2 class="vrp-title mb-3 text-center">Create Visitor Account</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- FirstName + LastName -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="FirstName" class="form-control vrp-input" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="LastName" class="form-control vrp-input" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
        </div>

        <!-- UserName + PhoneNumber -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="UserName" class="form-control vrp-input" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="PhoneNumber" class="form-control vrp-input" placeholder="Phone" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>
        </div>

        <!-- Email -->
        <div class="mb-2">
            <input asp-for="Email" class="form-control vrp-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <!-- Password + ConfirmPassword -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="Password" class="form-control vrp-input" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="col">
                <input asp-for="ConfirmPassword" class="form-control vrp-input" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
        </div>

        <!-- Country + Gender -->
        <div class="row g-2 mb-2">
            <div class="col">
                <input asp-for="Country" class="form-control vrp-input" placeholder="Country" />
                <span asp-validation-for="Country" class="text-danger small"></span>
            </div>
            <div class="col">
                <select asp-for="Gender" class="form-select vrp-input">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>
        </div>

        <!-- Passport -->
        <div class="mb-2">
            <input asp-for="Passport" class="form-control vrp-input" placeholder="Passport" />
            <span asp-validation-for="Passport" class="text-danger small"></span>
        </div>

        <div class="d-grid mb-2">
            <button type="submit" class="btn btn-primary vrp-submit-btn">Create Account</button>
        </div>

        <hr class="my-2">

        <div class="d-grid gap-1 mb-2">
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google", returnUrl = "/" })" class="btn btn-outline-danger btn-sm vrp-google-btn">
                <i class="fab fa-google me-1"></i> Google
            </a>
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook", returnUrl = "/" })" class="btn btn-outline-primary btn-sm vrp-facebook-btn">
                <i class="fab fa-facebook-f me-1"></i> Facebook
            </a>
        </div>

        <div class="text-center mt-2">
            <a asp-action="GuideRegister" class="vrp-alt-link">Create Guide Account</a>
            <br />
            <a asp-action="Login" class="vrp-alt-link">Login Now</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_NotifactionPartial" />
}
