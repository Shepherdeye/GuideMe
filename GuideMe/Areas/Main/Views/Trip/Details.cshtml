@model TripDetailsResponseVM

@{
    ViewData["Title"] = "Trip Details";
}

@* You would need to define the following custom styles in your main CSS file:
    1. .hero-gradient: A black-to-transparent gradient on the image to ensure text pops.
    2. .section-heading: A bold, uppercase style for section titles.
    3. .offer-list-item: Clean, bordered list item with a subtle hover effect.
    4. .hero-details-box: A subtle, semi-transparent box for the icon text if needed for better contrast on certain images.
*@


<div class="container py-5">

    <div class="card shadow-xl mb-5 border-0 rounded-4 overflow-hidden bg-dark">
        <div class="position-relative">

            <img src="/main/img/@Model.Trip.Image" class="w-100 rounded-top-4 opacity-75"
                 style="height: 450px; object-fit: cover;" alt="Trip Image: @Model.Trip.Title" />

            <div class="position-absolute bottom-0 start-0 w-100 p-5 text-white hero-gradient">
                <div class="container px-0">
                    <h1 class="display-3 fw-bolder mb-2 text-shadow">@Model.Trip.Title</h1>

                    <div class="d-flex flex-wrap gap-4 mt-3 fs-6 fw-bold p-2 rounded hero-details-box bg-white bg-opacity-75">
                        <span class="text-body"><i class="fa-solid fa-location-dot me-1 text-danger"></i> @Model.Trip.Region</span>
                        <span class="text-body"><i class="fa-solid fa-map me-1 text-info"></i> @Model.Trip.Destination</span>
                        <span class="text-body"><i class="fa-solid fa-clock me-1 text-warning"></i> @Model.Trip.NumberOfDays Days</span>
                        <span class="text-body"><i class="fa-solid fa-users me-1 text-success"></i> @Model.Trip.Members Guests</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">

        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
                <h3 class="text-primary fw-bolder display-5 m-0">@Model.Trip.Price.ToString("c")</h3>
                <div class="d-flex gap-2 gap-md-3">
                    @* Adjusted gap for better mobile fit *@
                    <button class="btn btn-primary btn-sm btn-lg px-3 px-md-4 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#offerModal">
                        <i class="fa-solid fa-handshake me-1 me-md-2"></i> Offer
                    </button>

                    <button class="btn btn-outline-dark btn-sm btn-lg px-3 px-md-4 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        <i class="fa-solid fa-star me-1 me-md-2"></i> Review
                    </button>
                </div>
            </div>

            <div class="p-4 border rounded-4 shadow-sm mb-5">
                <h4 class="fw-bold mb-3 text-secondary border-bottom pb-2">Trip Description</h4>
                <p class="lead text-dark mb-4">
                    @Model.Trip.Description
                </p>

              
            </div>

            <h3 class="text-uppercase fw-bold text-secondary mb-4">
                <i class="fa-solid fa-tags text-primary me-2"></i> Current Offers from Guides
            </h3>

            @if (Model.Offers.Any())
            {
                <div class="card border-0 rounded-4 shadow-sm">
                    <div class="list-group list-group-flush">

                        @foreach (var item in Model.Offers.ToList())
                        {
                            <div class="list-group-item p-4 offer-list-item">
                                <div class="d-flex align-items-start gap-3 gap-md-4">
                                    <img src="/identity/Profile/@item.Guide.ApplicationUser.ProfileImage"
                                         class="rounded-circle border border-primary p-1 flex-shrink-0" style="width: 60px; height: 60px; object-fit: cover;"
                                         alt="Guide: @item.Guide.ApplicationUser.FirstName" />

                                    <div class="flex-grow-1">
                                        <h5 class="fw-bold m-0 text-dark">
                                            @item.Guide.ApplicationUser.FirstName @item.Guide.ApplicationUser.LastName
                                            <span class="badge bg-primary bg-opacity-10 text-white rounded-pill ms-2 fw-normal">@item.Guide.ApplicationUser.Role</span>
                                        </h5>

                                        <p class="text-muted text-capitalize mt-1 mb-2 text-break">@item.Message</p>

                                        <small class="text-secondary">
                                            <i class="fa-solid fa-calendar-alt me-1"></i>
                                            @item.OfferStartDate.ToShortDateString() → @item.OfferEndDate.ToShortDateString()
                                        </small>
                                    </div>

                                    <div class="text-end flex-shrink-0">
                                        <h4 class="text-success fw-bolder m-0">@item.OfferedPrice.ToString("c")</h4>

                                        @{
                                            string badgeClass = item.Status == OfferStatus.Pending ? "bg-warning text-dark"
                                            : item.Status == OfferStatus.Accepted ? "bg-success"
                                            : "bg-danger";
                                        }
                                        <span class="badge @badgeClass fs-7 rounded-pill px-3 py-1 mt-1">@item.Status</span>
                                    </div>

                                    <button class="btn btn-outline-success px-4 rounded-pill flex-shrink-0 d-none d-md-inline-block" data-bs-toggle="modal" data-bs-target="#bookingModal1">
                                        <i class="bi bi-calendar-check me-1"></i> Book
                                    </button>
                                </div>
                                <button class="btn btn-outline-success w-100 mt-3 d-md-none" data-bs-toggle="modal" data-bs-target="#bookingModal1">
                                    <i class="bi bi-calendar-check me-1"></i> Book Offer
                                </button>
                            </div>
                        }

                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center rounded-4 shadow-sm py-4" role="alert">
                    <i class="fa-solid fa-bell me-2"></i> Be the first to receive an offer from a guide!
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card p-4 rounded-4 shadow">
                <h3 class="text-uppercase fw-bold text-secondary mb-4 text-center border-bottom pb-3">
                    <i class="fa-solid fa-star text-warning me-2"></i> Traveler Reviews
                </h3>

                @if (Model.Reviews.Any())
                {
                    <div class="list-group list-group-flush review-list">
                        @foreach (var item in Model.Reviews.ToList())
                        {
                            <div class="list-group-item p-3 border-0 border-bottom">
                                <div class="d-flex align-items-center mb-2">
                                    <img src="~/identity/Profile/@item.Visitor.ApplicationUser.ProfileImage" class="rounded-circle me-3 flex-shrink-0"
                                         style="width: 40px; height: 40px; object-fit: cover;" alt="Visitor: @item.Visitor.ApplicationUser.FirstName" />

                                    <div>
                                        <div class="fw-bold small">@item.Visitor.ApplicationUser.FirstName @item.Visitor.ApplicationUser.LastName</div>

                                        <div>
                                            @{
                                                int rating = 0;
                                                if (item.RatingReview == RatingReview.VeryBad) rating = 1;
                                                else if (item.RatingReview == RatingReview.Bad) rating = 2;
                                                else if (item.RatingReview == RatingReview.Good) rating = 3;
                                                else if (item.RatingReview == RatingReview.VeryGood) rating = 4;
                                                else if (item.RatingReview == RatingReview.Excellent) rating = 5;

                                                for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fa-solid fa-star small @(i <= rating ? "text-warning" : "text-light")"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <p class="text-muted small mb-1">"@item.Comment"</p>

                                <small class="text-muted fst-italic">@item.ReviewDate.ToShortDateString()</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-light text-center" role="alert">
                        No reviews yet. Be the first!
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="modal fade" id="offerModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header bg-primary text-white border-0 p-4 rounded-top-4">
                    <h5 class="modal-title fw-bold fs-4"><i class="fa-solid fa-handshake me-2"></i> Create Your Offer</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form>
                        <input type="hidden" name="TripId" value="@Model.Trip.Id" />
                        @* <input type="hidden" name="GuideId" value="@U" /> *@

                        <p class="text-muted mb-4">Propose a new price and date range for this trip.</p>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Offer Message</label>
                            <textarea class="form-control" rows="3" placeholder="Explain why you are offering this price/date..."></textarea>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Offered Price</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                                <input type="number" class="form-control form-control-lg" placeholder="e.g., 900" />
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Start Date</label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">End Date</label>
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 p-4 d-flex justify-content-between">
                    <button class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success px-5 rounded-pill fw-bold">Submit Offer</button>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="reviewModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header bg-success text-white border-0 p-4 rounded-top-4">
                    <h5 class="modal-title fw-bold fs-4"><i class="fa-solid fa-pen-to-square me-2"></i> Write a Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form>
                        <p class="text-muted mb-4">Your honest feedback helps others!</p>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Rating</label>
                            <select class="form-select form-select-lg">
                                <option value="5" selected>🌟 Excellent (5 Stars)</option>
                                <option value="4">✨ Very Good (4 Stars)</option>
                                <option value="3">👍 Good (3 Stars)</option>
                                <option value="2">😕 Bad (2 Stars)</option>
                                <option value="1">Worst 😡 (1 Star)</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Comment</label>
                            <textarea class="form-control" rows="4" placeholder="Share your experience and details about your trip."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 p-4 d-flex justify-content-between">
                    <button class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary px-5 rounded-pill fw-bold">Submit Review</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="bookingModal1" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header border-0 p-4 bg-info text-white rounded-top-4">
                    <h4 class="modal-title fw-bold"><i class="bi bi-calendar2-check me-2"></i> Confirm Booking</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body px-4 pb-4">
                    <form class="needs-validation" novalidate>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">Booking Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="text" class="form-control form-control-lg" value="900" disabled />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">Booking Status</label>
                                <select class="form-select form-select-lg" disabled>
                                    <option>Accepted</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">Start Date</label>
                                <input type="date" class="form-control form-control-lg" value="2024-01-05" required />
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">End Date</label>
                                <input type="date" class="form-control form-control-lg" value="2024-01-20" required />
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">Visitor</label>
                                <input class="form-control" value="Dummy Visitor (ID: 1)" disabled />
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold mb-1">Guide</label>
                                <input class="form-control" value="John Smith (ID: 3)" disabled />
                            </div>
                            <div class="col-12">
                                <label class="fw-bold mb-1">Trip</label>
                                <input class="form-control" value="Title (Trip ID: Id)" disabled />
                            </div>
                        </div>
                        <button class="btn btn-success w-100 mt-5 py-3 fw-bold rounded-pill text-uppercase fs-5">
                            Confirm Booking
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>