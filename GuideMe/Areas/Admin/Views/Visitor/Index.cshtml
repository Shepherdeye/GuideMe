@model AllVisitorResponse

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">Visitors</h4>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Visitor
        </a>
    </div>

    @if (Model.Visitors.Any())
    {
        <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table table-striped table-hover table-bordered align-middle mb-0 text-center">
                <thead class="table-dark small">
                    <tr>
                        <th style="width: 40px;">#</th>
                        <th style="width: 100px;">First Name</th>
                        <th style="width: 100px;">Last Name</th>
                        <th style="width: 110px;">Username</th>
                        <th style="width: 140px;">Email</th>
                        <th style="width: 100px;">Phone</th>
                        <th style="width: 80px;">Gender</th>
                        <th style="width: 100px;">Country</th>
                        <th style="width: 90px;">Role</th>
                        <th style="width: 60px;">Profile</th>
                        <th style="width: 120px;">Passport</th>
                        <th style="width: 100px;">Status</th>
                        <th style="width: 130px;">Email Confirmed</th>
                        <th style="width: 110px;">Actions</th>
                    </tr>
                </thead>
                <tbody class="small">
                    @foreach (var item in Model.Visitors)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>

                            <!-- Truncated fields -->
                            <td><span class="truncate-text" data-text="@item.UserName" data-label="Username">@item.UserName</span></td>
                            <td><span class="truncate-text" data-text="@item.Email" data-label="Email">@item.Email</span></td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Gender</td>
                            <td><span class="truncate-text" data-text="@item.Country" data-label="Country">@item.Country</span></td>
                            <td><span class="badge bg-secondary">@item.Role</span></td>

                            <td>
                                <img src="/identity/Profile/@(string.IsNullOrEmpty(item.ProfileImage) ? "unkown.png" : item.ProfileImage)"
                                     class="rounded-circle border"
                                     width="30" height="30"
                                     alt="Profile" />
                            </td>

                            <td><span class="truncate-text" data-text="@item.Passport" data-label="Passport">@item.Passport</span></td>

                            <td>
                                <span class="badge @(item.visitorStatus == VisitorStatus.Available ? "bg-success" : "bg-warning text-dark")">
                                    @item.visitorStatus
                                </span>
                            </td>

                            <td>
                                <span class="badge @(item.EmailConfirmed ? "bg-success" : "bg-danger")">
                                    @(item.EmailConfirmed ? "Yes" : "No")
                                </span>
                            </td>

                            <td>
                                <div class="d-flex justify-content-center gap-1">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary px-2" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                        <button type="button" class="btn btn-sm btn-outline-danger px-2 delete-btn" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="mt-3" aria-label="pagination">
            <ul class="pagination pagination-sm justify-content-center mb-0">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/admin/visitor/index?page=@(Model.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (var i = 1; i <= Model.PagesNumber; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/admin/visitor/index?page=@i">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.PagesNumber)
                {
                    <li class="page-item">
                        <a class="page-link" href="/admin/visitor/index?page=@(Model.CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="text-center py-5">
            <h5 class="text-muted">No Visitors Found</h5>
        </div>
    }
</div>

<!-- Modal for full text -->
<div class="modal fade" id="textModal" tabindex="-1" aria-labelledby="textModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title" id="textModalLabel"></h6>
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body small" id="textModalBody"></div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
    // Initialize Bootstrap tooltips
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));

    // Automatically make all truncated fields open modal on click
    document.querySelectorAll('.truncate-text').forEach(el => {
        el.addEventListener('click', function() {
            const text = this.dataset.text;
            const label = this.dataset.label || 'Details';
            document.getElementById('textModalLabel').textContent = label;
            document.getElementById('textModalBody').textContent = text;
            new bootstrap.Modal(document.getElementById('textModal')).show();
        });
    });

    // SweetAlert delete confirmation
    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', function () {
            const form = this.closest('form');
            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
</script>

<style>
    .truncate-text {
        display: inline-block;
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        cursor: pointer;
        color: #0d6efd;
    }
    .truncate-text:hover { text-decoration: underline; }

    table.table-striped td, table.table-striped th {
        vertical-align: middle !important;
    }
</style>
